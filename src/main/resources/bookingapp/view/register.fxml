<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!--
  1. Liên kết Controller: fx:controller="bookingapp.controller.RegisterController"
  2. Liên kết CSS: stylesheets="@../assets/style.css"
-->
<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/21"
           fx:controller="bookingapp.controller.RegisterController"
           styleClass="root"
           stylesheets="@../assets/style.css">

    <!-- Khung VBox màu trắng chứa form đăng ký -->
    <VBox alignment="TOP_CENTER"
          maxWidth="350"
          maxHeight="500"
          spacing="15"
          styleClass="login-form-pane">

        <padding>
            <Insets bottom="30" left="40" right="40" top="30" />
        </padding>

        <Text styleClass="logo-text" text="SÂN CẦU LÔNG" />
        <Label styleClass="header-text" text="Tạo Tài Khoản Mới" />

        <Label styleClass="form-label" text="Tên đăng nhập:" />
        <TextField fx:id="usernameField" promptText="Nhập tên của bạn" />

        <Label styleClass="form-label" text="Mật khẩu:" />
        <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" />

        <Label styleClass="form-label" text="Xác nhận Mật khẩu:" />
        <PasswordField fx:id="confirmPasswordField" promptText="Nhập lại mật khẩu" />

        <!-- HBox để chứa 2 nút (Đăng ký và Quay về) -->
        <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
            <Button fx:id="registerButton"
                    mnemonicParsing="false"
                    onAction="#handleRegister"
                    styleClass="button"
                    text="Đăng ký"
                    HBox.hgrow="ALWAYS" />

            <Button fx:id="backButton"
                    mnemonicParsing="false"
                    onAction="#handleBackToLogin"
                    styleClass="secondary-button"
                    text="Quay về"
                    HBox.hgrow="ALWAYS" />
        </HBox>

    </VBox>
</StackPane>

