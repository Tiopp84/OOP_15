<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!--
  StackPane là gốc, để chúng ta có thể đặt ảnh nền (bằng CSS)
  1. Liên kết Controller: fx:controller="bookingapp.controller.WelcomeController"
  2. Liên kết CSS: stylesheets="@../assets/style.css"
     (Dấu @../ nghĩa là "đi lùi 1 cấp, rồi vào thư mục assets")
-->
<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/21"
           fx:controller="bookingapp.controller.WelcomeController"

           styleClass="welcome-background"
           stylesheets="@../assets/style.css">

    <!-- Khung VBox màu trắng chứa form đăng nhập -->
    <VBox alignment="TOP_CENTER"
          maxWidth="350"
          maxHeight="450"
          spacing="15"
          styleClass="login-form-pane">

        <padding>
            <Insets bottom="30" left="40" right="40" top="30" />
        </padding>

        <Text styleClass="logo-text" text="SÂN CẦU LÔNG" />
        <Label styleClass="header-text" text="Đăng nhập" />

        <Label styleClass="form-label" text="Tên đăng nhập:" />
        <TextField fx:id="usernameField" promptText="Nhập tên của bạn" />

        <Label styleClass="form-label" text="Mật khẩu:" />
        <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" />

        <!-- HBox để chứa 2 nút (Đăng nhập và Đăng ký) -->
        <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
            <Button fx:id="loginButton"
                    mnemonicParsing="false"
                    onAction="#handleLogin"
                    styleClass="button"
                    text="Đăng nhập"
                    HBox.hgrow="ALWAYS" />

            <Button fx:id="registerButton"
                    mnemonicParsing="false"
                    onAction="#handleSwitchToRegister"
                    styleClass="secondary-button"
                    text="Đăng ký"
                    HBox.hgrow="ALWAYS" />
        </HBox>

    </VBox>
</StackPane>

